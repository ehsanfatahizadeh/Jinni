<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/row_newest_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/row_newest_titr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/row_newest_image"
            android:gravity="right"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            />






        <TextView
            android:id="@+id/row_newest_cheap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/row_newest_image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:gravity="right"
            android:textColor="#E90000"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/row_newest_price"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/row_newest_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/row_newest_image"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:gravity="right"
            android:textColor="#44CA00"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />


    </RelativeLayout>





</android.support.v7.widget.CardView>