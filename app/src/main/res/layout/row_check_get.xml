<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">



            <ImageView
                android:id="@+id/imageview_remove_row_check_get"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close_ic"
                android:layout_marginLeft="10dp"/>





            <TextView
                android:id="@+id/textview_tavasote_5467_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="پرداخت توسط : "
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/textview_tavasote_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textview_tavasote_5467_row_check_get"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/textview_mablagh_5467_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="میلغ : "
                android:layout_below="@+id/textview_tavasote_5467_row_check_get"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/textview_mablagh_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_tavasote_5467_row_check_get"
                android:layout_toLeftOf="@+id/textview_mablagh_5467_row_check_get"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/textview_toman_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" تومان "
                android:layout_below="@+id/textview_tavasote_5467_row_check_get"
                android:layout_toLeftOf="@+id/textview_mablagh_row_check_get"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textview_tarikh_text_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_mablagh_5467_row_check_get"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:text="تاریخ : "/>


            <TextView
                android:id="@+id/textview_tarikh_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_mablagh_5467_row_check_get"
                android:layout_toLeftOf="@+id/textview_tarikh_text_row_check_get"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/textview_vaziat_text_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_tarikh_text_row_check_get"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:text="وضعیت : "/>


            <TextView
                android:id="@+id/textview_vaziat_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_tarikh_text_row_check_get"
                android:layout_toLeftOf="@+id/textview_vaziat_text_row_check_get"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textview_tozihat_text_row_check_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_vaziat_text_row_check_get"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:text="توضیحات : "/>


            <TextView
                android:id="@+id/textview_tozihat_row_check_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_vaziat_text_row_check_get"
                android:layout_toLeftOf="@+id/textview_tozihat_text_row_check_get"
                android:layout_marginTop="5dp"
                android:gravity="right|top"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"/>









        </RelativeLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>