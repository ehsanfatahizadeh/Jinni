<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageview_remove_row_check_give"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/close_ic"
                    android:layout_marginLeft="10dp"/>



                <TextView
                    android:id="@+id/textview_dar_vajhe_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="در وجه : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/dar_vajhe_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_dar_vajhe_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_mablagh_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مبلغ : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/mablagh_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_mablagh_row_check_give"/>

                <TextView
                    android:id="@+id/textview_toman_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text=" تومان"
                    android:layout_toLeftOf="@+id/mablagh_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_tarikh_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تاریخ : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/tarikh_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_tarikh_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_vaziat_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="وضعیت چک : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/vaziat_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_vaziat_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_az_hesabe_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="از حساب : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/az_hesabe_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_az_hesabe_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_name_bank_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام بانک : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/name_bank_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_name_bank_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_shomare_check_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره چک : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/shomare_check_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_shomare_check_row_check_give"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textview_tozihat_row_check_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="توضیحات : "
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:id="@+id/tozihat_row_check_give"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@+id/textview_tozihat_row_check_give"
                    android:layout_marginLeft="10dp"/>



            </RelativeLayout>




        </LinearLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>